define service {
  service_description <%=description%>
  host_name <%=host%>
  check_command <%=check_command%>
<% if [*service_groups].any? %>
  servicegroups <%=[*service_groups].join(',')%>
<% end %>
<% if check_interval %>
  check_interval <%=check_interval%>
<% end %>
<% (variables || {}).each do |k,v| %>
  <%=k%> <%=v%>
<% end%>
}
